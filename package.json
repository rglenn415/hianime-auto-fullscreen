{
  "name": "hianime-auto-fullscreen",
  "version": "1.0.0",
  "description": "Firefox extension to auto-fullscreen HiAnime episodes during autoplay",
  "main": "content.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "node scripts/build-clean.js",
    "lint": "web-ext lint --self-hosted --source-dir=src"
  },
  "keywords": [
    "firefox",
    "extension",
    "hianime",
    "fullscreen",
    "autoplay"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/content.js",
      "src/popup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  }
}
